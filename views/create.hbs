<link ref="stylesheet" type="text/css" href="/stylesheets/create.css" />

<h1>Create an Assignment</h1>

<div id="create-form"  class="{{class}}">

  <form id="create" method="POST" action="/create">
    <!--  @todo proper box model instead of table -->
    <table>
      <tr>
        <td><label for="name">Name:</label></td>
        <td><input type="text" name="name" /></td>
      </tr>
      <tr>
        <td><label for="title">Title:</label></td>
        <td><input type="text" name="title" /></td>
      </tr>
      <tr>
        <td><label for="tags">Tags:</label></td>
        <td><input type="text" name="tags" /></td>
      </tr>
      <tr>
        <td><label for="description">Description:</label></td>
        <td><textarea type="text" name="description"></textarea></td>
      </tr>
      <tr>
        <td>&nbsp;</td>
        <td><input type="submit" />
      </tr>
    </table>
  </form>
</div>
